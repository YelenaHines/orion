class MyButton:
    
    def __init__(self, master):
        frame = t.Frame(master)
        frame.pack()
        
        self.printButton = t.Button(frame, text='Print Message', command=self.printMessage)
        self.printButton.pack(side=t.LEFT)
        
        self.quitButton = t.Button(frame, text='Quit', command=frame.quit)
        self.quitButton.pack(side=t.LEFT)
        
    def printMessage(self):
        print('wow, this actually worked!')



# makes a window
root = t.Tk()

b = MyButton(root)

# runs the window on a loop
root.mainloop()
